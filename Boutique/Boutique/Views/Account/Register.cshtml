@model Boutique.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = null;
}
<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="~/Content/login/style.css">
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Register</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
                            <div class="text w-100">
                                <h2>Welcome to Registery</h2>
                                <p>Already have an account?</p>
                                <a href="@Url.Action("Login", "Account")" class="btn btn-white btn-outline-white">Sign In</a>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-white btn-outline-white">Back</a>
                            </div>
                        </div>
                        <div class="login-wrap p-4 p-lg-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Sign Up</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            <form action="#" class="signin-form">
                                <div class="form-group mb-3">
                                    <label class="label" for="email">Email</label>
                                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "*****@gmail.com" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validate" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="password">Password</label>
                                    @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control", @type = "Password", @placeholder =" ********" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validate" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="fullname">FullName</label>
                                    @Html.TextBoxFor(m => m.FullName, "", new { @class = "form-control", @placeholder = "Sophia Wembley" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "validate" })
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="phone">Phone</label>
                                    @Html.TextBoxFor(m => m.Phone, "", new { @class = "form-control", @placeholder = "+84 ### ### ###" })
                                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "validate" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<script src="~/Content/login/jquery.min.js"></script>
<script src="~/Content/login/bootstrap.min.js"></script>
<script src="~/Content/login/main.js"></script>
