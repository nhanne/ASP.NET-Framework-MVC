<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Images/logo.png">
    <title>Boutique - @ViewBag.title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/mainJS")
   
</head>
<body>
    <!--=================================================== BACKTOP ============================================================ -->
    <div id="backtop">
        <i class="fa fa-arrow-up"></i>
    </div>
    <!--=================================================== NAVBAR ============================================================ -->
    @{
        Html.RenderPartial("Partial/navbar_Partial");
    }

    <!--=================================================== TOATS ============================================================ -->
    <div id="toast" class="success">
        <div class="toast toast--success">
            <div class="toast-icon toast-icon--success">
                <i class="fa fa-check-circle"></i>
            </div>
            <div class="toast-body">
                <h3 class="toast-title">SUCCESS</h3>
                <p class="toast-msg">đã thêm sản phẩm vào giỏ hàng.</p>
            </div>
            <div class="toast-close">
                <i class="fa fa-times"></i>
            </div>
        </div>

    </div>
    <div id="toast" class="failed">
        <div class="toast toast--failed">
            <div class="toast-icon toast-icon--failed">
                <i class="fa fa-exclamation"></i>
            </div>
            <div class="toast-body">
                <h3 class="toast-title">FAILED</h3>
                <p class="toast-msg">sản phẩm hiện đang hết hàng.</p>
            </div>
            <div class="toast-close">
                <i class="fa fa-times"></i>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()

    </div>
    <!--=================================================== FOOTER ============================================================ -->
    @{
        Html.RenderPartial("Partial/footer_Partial");
    }
    @Scripts.Render("~/bundles/mainJS")
		@RenderSection("Script",false)
    <!--=================================================== Script ============================================================ -->
</body>
</html>
