@model Boutique.Models.Stock
@{
    ViewBag.headTitle = "Thêm phân loại mới";
    Layout = "~/Areas/Admin/Views/Shared/admin_Layout.cshtml";
}


@using (Html.BeginForm("AddPhanLoai", "Product", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductId, new { htmlAttributes = new { @class = "form-control"  } })

        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <h3 class="tile-title">Nhập thông tin sản phẩm</h3>
                    <div class="tile-body">

                        @if (ViewBag.error != null)
                        {
                            <div style="margin: 20px 0; color: red"> @ViewBag.error</div>
                        }
                        <div class="row">

                            <div class="form-group col-md-4">
                                <label for="exampleSelect1" class="control-label">Màu sắc</label>
                                @Html.DropDownList("ColorId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ColorId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4 ">
                                <label for="exampleSelect1" class="control-label">Giảm giá</label>
                                @Html.DropDownList("SizeId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SizeId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Số lượng</label>
                                @Html.EditorFor(model => model.Stock1, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Stock1, "", new { @class = "text-danger" })
                            </div>

                        </div>

                    </div>
                    <input type="submit" value="Create" class="btn btn-save" />
                    <a class="btn btn-cancel" href="@Url.Action("PhanLoaiSP","Product", new { @Id = ViewBag.id })">Hủy bỏ</a>
                </div>
            </div>
        </div>
    </div>

}



