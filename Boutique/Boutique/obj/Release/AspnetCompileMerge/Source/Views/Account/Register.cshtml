@model Boutique.Models.Customer
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layout/login_Layout.cshtml";
}

<div class="form-box register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
            <h2>Sign Up</h2>
            <div class="input-box">
                <span class="icon"><i class="fa fa-user"></i></span>
                @Html.TextBoxFor(m => m.FullName, "")
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "validate" })
                <label for="">Fullname</label>
            </div>
            <div class="input-box">
                <span class="icon"><i class="fa fa-envelope"></i></span>
                @Html.TextBoxFor(m => m.Email, "")
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validate" })
                @if (ViewBag.error != null)
                {
                    <span class="validate">@ViewBag.error</span>
                }
                <label for="">Email</label>
            </div>
            <div class="input-box">
                <span class="icon"><i class="fa fa-unlock-alt"></i></span>
                @Html.TextBoxFor(m => m.Password, "", new { @type = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validate" })
                <label for="">Password</label>
            </div>
            <div class="input-box">
                <span class="icon"><i class="fa fa-phone"></i></span>
                @Html.TextBoxFor(m => m.Phone, "")
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "validate" })
                <label for="">Phone</label>
            </div>
            <div class="remember-forget">
                <label for=""><input type="checkbox">I agree to the term & conditions</label>
            </div>
            <button class="btn" type="submit">Sign Up</button>
            <div class="login-register">
                <p>Already have an account ? <a href="@Url.Action("Login", "Account")" class="login-link">Sign In</a></p>
            </div>
    }
    </div>
<script>

</script>