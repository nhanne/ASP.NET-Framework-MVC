@model Boutique.Models.Order
@{
    ViewBag.Title = "Quản lý đơn hàng:";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
}

<div id="main" class=" container d-flex flex-column flex-lg-row h-lg-full bg-surface-secondary">
    <!-- Vertical Navbar -->
    <!-- Main content -->


    <div class="h-screen flex-grow-1 overflow-y-lg-auto">
        @{
            Html.RenderPartial("Partial_Account");


        }
        <main class="py-6 bg-surface-secondary">
            <!DOCTYPE html>
            <html lang="en">

            <head>
                <meta charset="UTF-8">
                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                <title>Chi tiết đơn hàng</title>
                <!-- Bootstrap CSS -->
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            </head>

            <body>
                <div class="container mt-5">
                    <h1>Quản lý đơn hàng</h1>
                    <div class="table-responsive" style="height: 70vh">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Mã đơn hàng</th>
                                    <th scope="col">Tình trạng</th>
                                    <th scope="col">Ngày đặt hàng</th>
                                    <th scope="col">Chi tiết</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in ViewBag.orders)
                                    {
                                        <tr>
                                            <th scope="row">@(i++)</th>
                                            <td>@item.Id</td>
                                            <td>
                                                @switch (item.Status)
                                                {
                                                    case "Chưa giao hàng":
                                                        <span class="badge bg-primary">
                                                            @item.Status
                                                        </span>
                                                        break;
                                                    case "Đang giao hàng":
                                                        <span class="badge bg-warning">
                                                            @item.Status
                                                        </span>
                                                        break;
                                                    case "Hoàn thành":
                                                        <span class="badge bg-warning">
                                                            @item.Status
                                                        </span>
                                                        break;
                                                    case "Đã hủy":
                                                        <span class="badge bg-danger">
                                                            @item.Status
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(item.OrdTime?.ToString("dd-MM-yyyy"))</td>
                                            <td><button type="button" class="btn btn--black btn-sm" data-bs-toggle="modal" data-bs-target="#orderModal1">Xem chi tiết</button></td>
                                        </tr>
                                    }
                                }
                                <!-- Thêm các đơn hàng khác ở đây -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="orderModal1" tabindex="-1" aria-labelledby="orderModal1Label" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="orderModal1Label">Chi tiết đơn hàng ORD12345</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Thông tin chi tiết đơn hàng ORD12345 -->
                                <p>Tên khách hàng: John Doe</p>
                                <p>Địa chỉ: 123 Main Street, City, Country</p>
                                <p>Điện thoại: 123-456-7890</p>
                                <p>Ngày đặt hàng: 2023-07-19</p>
                                <p>Tình trạng: Đã giao hàng</p>
                                <hr>
                                <h6>Sản phẩm trong đơn hàng:</h6>
                                <ul>
                                    <li>1 x Áo thun màu đen</li>
                                    <li>2 x Quần jeans</li>
                                    <!-- Thêm thông tin sản phẩm khác ở đây -->
                                </ul>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thêm các modal khác cho các đơn hàng khác ở đây -->
                <!-- Bootstrap JS và Popper.js -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            </body>

        </html>

    </main>
</div>

</div>
<!-- Bootstrap JS và Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



