<script>
    // Thêm active class vào category
    $(document).ready(function () {
        const currentUrl = window.location.href
        const getNameCate = currentUrl.split('Account')?.[1]
        const allCate = document.querySelectorAll('.menu');
        allCate[0].classList.add("active");
        console.log(getNameCate)
        if (getNameCate) {
           
            let activeCate;
            for (var i = 0; i < allCate.length; i++) {
                if (allCate[i].getAttribute('href').split('Account')?.[1] === getNameCate) {
                    activeCate = allCate[i]
                    break
                }
            };
           
            if (activeCate) {
                activeCate.classList.add("active");
                allCate[0].classList.remove("active");
            }
           
        };
    })
   
</script>