@model Boutique.Models.Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout/login_Layout.cshtml";
}
<div class="social-icons">
    <a href=""><i class="fa fa-facebook"></i></a>
    <a href=""><i class="fa fa-instagram"></i></a>
    <a href=""><i class="fa fa-twitter"></i></a>
</div>
<div class="form-box login">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h2>Sign In</h2>
        <div class="input-box">
            <span class="icon"><i class="fa fa-envelope"></i></span>
            @Html.TextBoxFor(m => m.Email,"")
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validate" })
            <label for="">Email</label>
        </div>
        <div class="input-box">
            <span class="icon"><i class="fa fa-unlock-alt"></i></span>
            @Html.PasswordFor(m => m.Password,"")
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validate" })
            <label for="">Password</label>
        </div>
        <div class="remember-forgot">
            <label for=""><input type="checkbox">Remember me</label>
            <a href="#">Forget password?</a>
        </div>
        <button type="submit" class="btn">Sign In</button>
        <div class="login-register">
            <p>Don't have an account ? <a href="@Url.Action("Register", "Account")" class="register-link">Sign Up</a></p>
        </div>
    }
</div>
